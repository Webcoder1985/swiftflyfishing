{%- capture srcset -%}
  {{ image | img_url: '2000x' }} 2000w,
  {{ image | img_url: '1800x' }} 1800w,
  {{ image | img_url: '1600x' }} 1600w,
  {{ image | img_url: '1400x' }} 1400w,
  {{ image | img_url: '1200x' }} 1200w,
  {{ image | img_url: '1000x' }} 1000w,
  {{ image | img_url: '800x' }} 800w,
  {{ image | img_url: '600x' }} 600w,
  {{ image | img_url: '400x' }} 400w,
  {{ image | img_url: '200x' }} 200w
{%- endcapture -%}

{% if crop_to_aspect_ratio != blank %}
  {% assign aspect_ratio = crop_to_aspect_ratio %}
{% else %}
  {% assign aspect_ratio = image.aspect_ratio %}
{% endif %}

{% comment %}Build image element{% endcomment %}
<div class="image-element__wrap {{additional_classes}}" style="{{ background_color }} padding-top:{{ 1 | divided_by: aspect_ratio | times: 100}}%;">
  <img class="lazy" data-src="{{ image | img_url: '2048x' }}"  data-srcset="{{ srcset }}"/>
</div>
