@mixin prefix($property, $value, $prefixes) {
  @each $prefix in $prefixes {
    @if $prefix == webkit {
      -webkit-#{$property}: $value;
    } @else if $prefix == moz {
      -moz-#{$property}: $value;
    } @else if $prefix == ms {
      -ms-#{$property}: $value;
    } @else if $prefix == o {
      -o-#{$property}: $value;
    } @else if $prefix == spec {
      #{$property}: $value;
    } @else  {
      @warn 'Unrecognized prefix: #{$prefix}';
    }
  }
}

@mixin font-MontRegular() {
  font-family: {{settings.headline__font.family}}, {{settings.headline__font.fallback_families}};
  font-weight: 400;
}

@mixin font-MontBold() {
  font-family: {{settings.headline__font.family}}, {{settings.headline__font.fallback_families}};
  font-weight: {{ settings.headline__font.weight }};
}

@mixin font-MontSBold() {
  font-family: {{settings.subline__font.family}}, {{settings.subline__font.fallback_families}};
  font-weight: {{ settings.subline__font.weight }};
}

@mixin font-LatoBold() {
  font-family: {{settings.regular__font.family}}, {{settings.regular__font.fallback_families}};
  font-weight: 700;
}

@mixin font-LatoRegular() {
  font-family: {{ settings.regular__font.family }}, {{ settings.regular__font.fallback_families }};
  font-weight: {{ settings.regular__font.weight }};
  font-style: {{ settings.regular__font.style }};
  text-transform: {{ settings.regular_font_style }};
}

@mixin font-LatoLight() {
  font-family: {{settings.regular__font.family}}, {{settings.regular__font.fallback_families}};
  font-weight: 300;
  font-style: normal;
  line-height: 1.5;
  letter-spacing: 1px;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

//Filter collections

.sidebar .filter-active-tag {
  position: relative;
}

.color-filter--true {
  label {
    display: flex;
    align-items: center;
  }
}

.sidebar__collection-filter {
  a, label {
    cursor: pointer;
  }

  label {
    text-transform: capitalize;
    font-weight: normal;
    font-size: inherit;
  }

  label:hover {
    color: {{ settings.link_hover_color }}
  }

  input[type="checkbox"] {
    display: none;
  }

  input.styled-checkbox[type="checkbox"] {
    -webkit-appearance: none;
    -moz-appearance: none;
    box-sizing: border-box;
    width: 20px;
    height: 20px;
    {% if settings.swatch_style != 'square' %}
      border-radius: 50%;
    {% endif %}
    display: inline-block;
    cursor: pointer;
    position: relative;
    vertical-align: top;
    background-size: cover;
    margin-right: 15px;
  }

  button.clear-active-filter, button.clear-active-filter:active {
    color: {{ settings.link_color }};
    background-color: transparent;
    border: none;
    outline: 0;
    box-shadow: 0;
    font-family: inherit;
    letter-spacing: 0;
    text-transform: none;
    position: absolute;
    @include prefix(transform, translateY(-50%), ms webkit spec);
    top: 0;
    right: 0;
    left: auto;
    padding: 2px 4px;
    line-height: 1.2;
    display: block;
    height: auto;
    min-height: auto;
  }

  button.clear-active-filter:hover {
    color: {{ settings.link_hover_color }};
  }

  .x-icon {
    position: relative;
    display: inline-block;
    overflow: visible;
    width: 15px;
    height: 15px;
    margin: 0 2px 0 0;
    padding: 0;
    cursor: pointer;
    transition: color 0.2s;
    text-decoration: none;
    font-style: normal;
    color: #95979c;
    border: 0;
    outline: 0;
    background: transparent;
    vertical-align: middle;
    top: -1px;
    &:before {
      font-family: Arial, "Helvetica CY", "Nimbus Sans L", sans-serif !important;
      font-size: 25px;
      line-height: 15px;
      position: absolute;
      top: 0;
      left: 0;
      display: block;
      width: 15px;
      content: "\00d7";
      text-align: center;
    }
  }
}

