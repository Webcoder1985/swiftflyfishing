        display: flex;
        flex-wrap: wrap;
        width: 100%;
        
        &.column-3{
          .content_block_item.grid-1{
            width: calc(33.3% - 20px);
          }
          .content_block_item.grid-2{
            width: calc(66.6% - 20px);
          }
          .content_block_item.grid-3{
            width: calc(100%);
          }
        }
        &.column-4{
          .content_block_item.grid-1{
            width: calc(25% - 20px);
          }
          .content_block_item.grid-2{
            width: calc(50% - 20px);
          }
          .content_block_item.grid-3{
            width: calc(75% - 20px);
          }
          .content_block_item.grid-4{
            width: calc(100%);
          }
        }
        &.column-2{
          .content_block_item.grid-1{
            width: calc(50% - 20px);
          }
          .content_block_item.grid-2{
            width: calc(100%);
          }
        }
        &.column-1{
          .content_block_item.grid-1{
            width: calc(100%);
          }
        }
        .content_block_item{
          width: 50%;
          padding: 40px;
          margin-bottom: 20px;
          @media screen and (max-width: 768px) {
            width: 100%!important;
            min-height: 210px;
          }
          &.grid-1{
            width: calc(33.3% - 20px);
          }
          &.grid-2{
            width: calc(66.6% - 20px);
          }
          &.grid-3{
            width: calc(100%);
          }
          .info{
            .text-list{
             
              p{
                line-height: 1.6;
                display: flex;
                margin-top: 15px;
                margin-bottom: 0;
                &::before{
                  margin-top: 9px;
                  margin-right: 10px;
                  content: " ";
