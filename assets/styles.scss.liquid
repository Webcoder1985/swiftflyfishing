  text-align: center;
  color: {{ settings.promo_text_color }};
  font-size: 12px;
  position: relative;
  width: 100%;
  height: 0;
  line-height: 0;
  z-index: 5000;
  top: 0;
  transition: all 0.3s linear;
  overflow: hidden;
  .promo-banner__content {
    margin: 0px auto;
    padding: 0 1.5rem;
    @include respond-to('medium-down'){
      font-size: 10px;
      max-height: 50px;
    }
  }
  p {
    margin-bottom: 0;
    display: inline;
    line-height: 1;
  }
  .promo-banner__close {
    position: absolute;
    top: 0;
    right: 0;
    display: block;
    overflow: visible;
    width: 35px;
    height: 35px;
    margin: 0;
    padding: 0;
    cursor: pointer;
    text-decoration: none;
    color: {{ settings.promo_text_color }};
    border: 0;
    outline: 0;
    background: transparent;
    z-index: 1000;
    &:before {
      font-family: Arial, "Helvetica CY", "Nimbus Sans L", sans-serif !important;
      font-size: 20px;
      line-height: $promoBannerHeight;
      position: absolute;
      top: 0;
      left: 0;
      display: block;
      width: 35px;
      content: "\00d7";
      text-align: center;
    }
  }
}

.promo-banner--show .promo-banner {
  transition: all 0s linear;
  height: auto;
  min-height: $promoBannerHeight;
  line-height: 1.1;
  @include flexbox();
  @include align-items(center);
}

.top-bar {
  padding-top: 0;
  position: relative;
  transition: padding-top 0.3s linear;
  @include respond-to('small-down') {
    padding-top: 0;
  }
}

