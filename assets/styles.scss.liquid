    -webkit-column-count: 5;
    column-count: 5;
    @include prefix(transform, translateX(0), ms webkit spec);

    @media only screen and (max-width: 798px) {
      -moz-column-count: 3;
      -webkit-column-count: 3;
      column-count: 3;
    }

    @media only screen and (max-width: 400px) {
