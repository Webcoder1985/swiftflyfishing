  .masonry {
    font-size: .85em;
    line-height: 0px;
    margin: 10px 0;
    column-gap: 10px;
    -moz-column-gap: 10px;
    -webkit-column-gap: 10px;

  }

  .gallery-empty-wrapper {
    min-height: 100px;
    overflow: hidden;
    svg {
      min-width: 800px;
      path {
        display: none;
      }
    }
  }

  .adjust-columns {
    column-gap:0px;
    -moz-column-gap: 0px;
    -webkit-column-gap: 0px;
    overflow: hidden;
  }

  .gallery-image-wrapper,
  .gallery-empty-wrapper {
      display: block;
      width: 100%;
      margin: 0 0 5px 0;
      box-sizing: border-box;
      -webkit-column-break-inside: avoid;
