$color-black: {{settings.regular_color}};
$color-darkgrey: #3D3D3D;
$color-midgrey: #848484;
$color-lightgrey: #BCBCBC;
$color-dirtywhite: #F4F4F4;
$color-white: #FFFFFF;
$color-red: #ED1C24;
$color-lightred: rgba(216,216,216,0.17);
$color-blue: #0F1626;
$color-brown: #AB987A;
$color-trans-white:rgba(255,255,255,0.38);
$color-green: #47c1bf;

$table-background-color: #f9f9f9;
$table-border-color: #dcdcdc;

$font-extra_small: {{settings.link_font_size}}px;
$font-span: {{settings.span_font_size}}px;
$font-small: {{settings.subline_font_size}}px;
$font-desc: {{settings.regular_font_size}}px;
$font-body: {{settings.regular_font_size}}px;
$font-price: {{settings.price_font_size}}px;
$font-medium: {{settings.large_heading_font_size | times: 0.59}}px;
$font-large: {{settings.headline_font_size}}px;
$font-subtitle: {{settings.link_font_size}}px;
$font-header: 22px;
$font-extra: {{settings.large_heading_font_size}}px;


@mixin font-MontRegular() {
  font-family: {{settings.headline__font.family}}, {{settings.headline__font.fallback_families}};
  font-weight: 400;
}

@mixin font-MontBold() {
  font-family: {{settings.headline__font.family}}, {{settings.headline__font.fallback_families}};
  font-weight: {{ settings.headline__font.weight }};
}

@mixin font-MontSBold() {
  font-family: {{settings.subline__font.family}}, {{settings.subline__font.fallback_families}};
  font-weight: {{ settings.subline__font.weight }};
}

@mixin font-LatoBold() {
  font-family: {{settings.regular__font.family}}, {{settings.regular__font.fallback_families}};
  font-weight: 700;
}

@mixin font-LatoRegular() {
  font-family: {{ settings.regular__font.family }}, {{ settings.regular__font.fallback_families }};
  font-weight: {{ settings.regular__font.weight }};
  font-style: {{ settings.regular__font.style }};
  text-transform: {{ settings.regular_font_style }};
}

@mixin font-LatoLight() {
  font-family: {{settings.regular__font.family}}, {{settings.regular__font.fallback_families}};
  font-weight: 300;
  font-style: normal;
  line-height: 1.5;
  letter-spacing: 1px;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

.account-header-logout {
  text-align: right;
  text-transform: uppercase;
}

.account-sidebar {
  box-sizing: border-box;
  padding-right: 10px;

  @media screen and (max-width: 768px) {
    border: 0;
    padding-right: 0;
  }
}

.customers-addresses {
  .account-sidebar {
    border-right: 0;
    padding-right: 0;
  }
  .account-main {
    box-sizing: border-box;
    border-left: 1px solid {{ settings.headline_border_color }};
    padding-left: 20px;
    @media screen and (max-width: 768px) {
      border: 0;
      padding-left: 0;
    }
  }
}

.action_bottom .note {
  vertical-align: middle;
  line-height: 40px;
}

.address_title {
  margin-bottom: 0;
  padding-bottom: 0;
}

.collapsible-table {
  width: 100%;
  margin-bottom: 20px;

  th {
    font-weight: 700;
    text-align: left;
  }

  th,
  td {
    padding: 10px;

    @media screen and (max-width: 768px) {
      border-left: none;
    }
  }

  tr .order_summary td.label {
    text-align: right;
  }

  .order-details__discount-block {
    display: block;
  }

  @media screen and (max-width: 768px) {
    thead {
      display: none;
    }

    tr {
      display: block;
      margin-bottom: 20px;

      &:last-child {
        margin-bottom: 0;
      }

      td {
        position: relative;
      }
    }

    td {
      display: block;
      display: -webkit-box;
      display: -moz-box;
      display: -ms-flexbox;
      display: -webkit-flex;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0 10px 0 0;

      &:before {
        content: attr(data-label);
        z-index: 1;
        padding: 6px;
        font-weight: bold;
        width: calc(50% - 6px);
        word-break: break-word;
      }

      &:after {
        content: "";
        z-index: 0;
        width: 50%;
        min-height: 100%;
        position: absolute;
      }

      &:last-child {
        border-bottom: none;
      }
    }

    tfoot {
      display: block;
      margin-top: 20px;

      tr {
        margin-bottom: 0;
        border-bottom: none;

        &:last-child {
          border-bottom: 1px solid $table-border-color;
        }
      }
    }

    .order-details__total,
    .order-details__product,
    .order-details__discount {
      text-align: right;
      padding-left: 10px;
      width: calc(50% - 10px);
      word-break: break-word;
    }
  }
}

#customer-orders,
#order-details {
  th {
    background-color: $table-background-color;
  }

  th,
  td {
    border-right: 1px solid $table-border-color;

    &:first-child {
      border-left: 1px solid $table-border-color;

      @media screen and (max-width: 768px) {
        border-left: none;
      }
    }
  }

  tr {
    border-bottom: 1px solid $table-border-color;

    &:first-child {
      border-top: 1px solid $table-border-color;
    }
  }

  @media screen and (max-width: 768px) {
    tr {
      border: 1px solid $table-border-color;
      border-bottom: none;
    }

    td {
      border-right: none;
      border-bottom: 1px solid $table-border-color;

      &:after {
        border-right: 1px solid $table-border-color;
        background-color: $table-background-color;
      }
    }

    tfoot {
      td {
        border-bottom: none;
      }

      &:last-child {
        border-bottom: 1px solid $table-border-color;
      }
    }
  }
}


.login-section, .register-section{
    display: flex;
    #customer{
        .content{
        max-width: 400px;
        width: 100%;
        @media screen and (max-width: 768px) {
            padding: 0 20px;
            padding-bottom: 50px;
        }
        h1{
            @include font-MontSBold();
            font-size: $font-desc;
            text-transform: uppercase;
            text-align: center;
        }
        form{
            .errors{
            ul{
                list-style: none;
                padding: 0;
                li{
                padding: 15px 0;
                background: $color-red;
                color: $color-white
                }
            }
            }
            .acceptsMarketing{
            display: flex;
            align-items: center;
            justify-content: end;
            label{
                margin-bottom: 0;
            }
            }
            label{
            text-transform: capitalize;
            span{
                color: $color-red;
