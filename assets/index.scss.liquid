.slideshow-section{
    position: relative;
    margin-bottom: 0!important;
    .banner {
      .gallery-cell {
        position: relative;
        .caption {
          @media screen and (max-width: 768px) {
            background: $color-blue;
            margin: 0!important;
            width: 100%;
          }
          .caption-content{
            max-width: 830px;
            padding: 20px 40px;
            width: 80%;
            @media screen and (max-width: 768px) {
              width: 100%;
              padding: 20px 0 30px;
              background: transparent;
            }
            .pretext{
              p{
                margin-top: 20px;
                color: $color-white;
              }
            }
            .headline p{
              line-height: 1.2;
              margin-top: 10px;
              font-size: {{settings.slideshow_headline_size}}px;
              letter-spacing: {{settings.slideshow_headline_letter_spacing}}px;
              @media screen and (max-width: 1024px) {
                font-size: 56px;
              }
              @media screen and (max-width: 768px) {
                font-size: 22px;
                color: $color-white!important;
                letter-spacing: 0.17px;
              }
            }
            .subtitle{
              p{
                font-family: {{ settings.slideshow_subtitle__font.family }}, {{ settings.slideshow_subtitle__font.fallback_families }};
                font-weight: {{ settings.slideshow_subtitle__font.weight }};
                font-style: {{ settings.slideshow_subtitle__font.style }};
                text-transform: {{ settings.slideshow_subtitle_font_style }};
                color: $color-white;
                font-size:  {{ settings.slideshow_subtitle_size }}px;
                text-transform: none;
                letter-spacing: {{settings.slideshow_subtitle_letter_spacing}}px;
                @media screen and (max-width: 1024px) {
                  font-size: $font-medium;
                }
                @media screen and (max-width: 768px) {
                  font-size: $font-body;
                }
              }
            }
            a.highlight-false{
              @media screen and (max-width: 320px) {
                color: $color-white;
                border-color: $color-white;
              }
            }
          }
        }
        .icon{
          position: absolute;
          right: 45px;
          bottom: 35px;
          @media screen and (max-width: 768px) {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: -31px;
            z-index: 34;
            position: relative;
            width: 100%;
            right: 0;
            bottom: 5px;
            svg{
              width: 20px;
              height: 30px;
              margin-right: 10px;
              @media screen and (max-width: 320px) {
                #warenty_badge{
                  path{
                    stroke-width: 4;
                  }
                  text, g, rect {
                    display: none;
                  }
                }
                
              }
            }
            span{
              color: $color-white;
            }
          }
        }
      }
      .flickity-page-dots{
        display: none;
      }
    }
    .arrow-down{
      position: absolute;
      bottom: 20px;
      left: 50%;
      display: table;
      @media screen and (max-width: 320px) {
        display: none;
      }
    }
}

.section-title{
    font-size: $font-desc;
    text-align: left;
    position: relative;
    width: 100%;
    @media screen and (max-width: 320px) {
      text-align: center;
      line-height: 20px;
      text-transform: uppercase;
    }
    &.title-left{
      span{
        text-transform: uppercase;
        background: $color-white;
        z-index: 1000;
        position: relative;
        padding-right: 10px;
      }
      &::after{
        content: " ";
        width: 100%;
        height: 1px;
        display: table;
        position: absolute;
        right: -9px;
        border-top: 1px dashed;
        top: 50%;
        @media screen and (max-width: 320px) {
          content: none;
        }
      }
    }
  
    &.title-right{
      text-align: right;
      span{
        text-transform: uppercase;
        background: $color-white;
        z-index: 1000;
        position: relative;
        padding-left: 10px;
      }
      &::after{
        content: " ";
        width: calc(100% - 140px);
        height: 1px;
        display: table;
        position: absolute;
        left: -9px;
        border-top: 1px dashed;
        top: 50%;
      }
    }
}
  
