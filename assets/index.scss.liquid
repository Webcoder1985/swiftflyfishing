.list-collection-wrapper{
    .list-collections{
      @media screen and (max-width: 768px) {
        overflow: initial;
      }
      &[data-prevnext="true"]{
        .flickity-button{
        }
        .flickity-page-dots{
          @media screen and (max-width: 480px) {
            position: initial;
            top: -23px;
            transform: none;
            height: 10px;
            z-index: 1000;
            right: 0;
          }
        }
      }
      .flickity-viewport {
        transition: height 0.2s;
      }
      .thumbnail {
        @media screen and (max-width: 768px) {
          width: 70%;
          margin-right: 5px;
          margin-left: 5px;
          &.is-selected{
            .collection-info__caption{
              opacity: 1;
            }
          }
        }
        @media screen and (max-width: 480px) {
          width: 100%!important;
          &.is-selected{
            .collection-info__caption{
              opacity: 1;
            }
