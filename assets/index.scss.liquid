        }
        .product-wrap{
          .image-element__wrap{
            img{
              transition: 0.3s;
            }
          }
          &:hover{
            .image-element__wrap{
              filter: brightness(0.5);
              img{
                transform: scale(1.1);
              }
            }
            .collection-description__caption {
              display: block;
            }
          }
          .collection-description__caption {
            transition: all 1s;
            display: none;
            position: absolute;
            top: 50%;
            max-width: 350px;
            padding: 0 15px;
            transform: translate(-50%, -50%);
            left: 50%;
            width: 100%;
            
            p{
              @include font-LatoRegular();
              font-size: $font-desc;
              color: {{settings.product_hover_text_color}};
            }
          }
          .collection-info__caption {
            position: absolute;
            bottom: 20px;
            margin-bottom: 20px;
            @media screen and (max-width: 768px) {
              display: none;
            }
            .title{
              color: {{settings.product_hover_text_color}};
            }
          }
          .bottom_links{
            display: none;
            @media screen and (max-width: 768px) {
              display: flex!important ;
              justify-content: space-between;
              padding: 10px 20px;
            }
            
            p{
              max-width: 70%;
              text-align: left;
              @include font-LatoBold();
              font-size: $font-body;
            }
            a{
              @include font-MontBold();
              font-size: $font-body;
              text-transform: uppercase;
            }
          }
        }
        .collection-info__caption {
          width: 100%;
          padding: 0 20px;
          @media screen and (max-width: 480px) {
            padding: 0 5px;
            width: 100%;
            padding: 0 0px;
            background: $color-white;
            opacity: 0;
          }
