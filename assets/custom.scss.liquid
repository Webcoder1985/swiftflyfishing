.flickity-prev-next-button {
  opacity: 1;
  position: inherit;
  padding: 0;
  width: 40px;
  background: transparent!important;
  svg{
    width: 100%;
    height: 100%;
    transform: none;
    position: relative;
  }
  .arrow{
    left: 0;
    top: 50%;
    opacity: 1;
  }
  &.previous{
    svg{
      .arrow{
        transform: translate(19%, 19%);
      }
    }
  }
  &.next{
    svg{
      .arrow{
        transform: rotate(180deg) translate(-82%, -83%);
      }
    }
  }
}

