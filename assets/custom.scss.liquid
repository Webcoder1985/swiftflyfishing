.flickity-prev-next-button {
  opacity: 1;
  position: inherit;
  padding: 0;
  width: 40px;
  background: transparent;
  svg{
    width: 100%;
    height: 100%;
    transform: none;
    position: relative;
  }
  .arrow{
    left: 0;
    top: 50%;
    opacity: 1;
  }
  &.previous{
    svg{
      .arrow{
        transform: translate(19%, 19%);
      }
    }
  }
  &.next{
    svg{
      .arrow{
        transform: rotate(180deg) translate(-82%, -83%);
      }
    }
  }
}

.flickity-enabled {
  .flickity-page-dots{
    display: flex!important;
    align-items: center;
    justify-content: center;
    .dot{
      height: 4px!important;
      width: 4px!important;
      margin: 0!important;
      background: black!important;
      margin-left: 5px!important;
      border-radius: 50%!important;
      opacity: 1!important;
      &.is-selected{
