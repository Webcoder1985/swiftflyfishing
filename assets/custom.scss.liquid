.image-slider-section{
  .heading{
    margin-bottom: 50px;
  }
  #bar{
    width: calc(100% - 50px);
    margin-right: 0;
    margin-left: 50px;
    border-radius: 0;
    position: relative;
    background: transparent;
    padding: 10px 0;
    margin-bottom: 100px;
    .label-indicator{
      position: absolute;
      z-index: 10;
      transform: translateY(-100%);
      margin-top: 6%;
      span.title{
        width: 150px;
        font-size: $font-subtitle;
        text-align: center;
      }
      &.align-bottom{
        flex-direction: column-reverse;
        display: flex;
        margin-top: -6%;
        transform: translateY(000%);
        .pointer{
          margin-top: 0;
          margin-bottom: 35px;
          &::before{
            background: linear-gradient(45deg, #000, transparent);
            position: absolute;
            top: 30px;
          }
        }
      }
      .pointer{
        width: 30px;
        height: 30px;
        background: rgba(255,255,255,0.33);
        backdrop-filter: opacity(.4);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
        margin-top: 35px;
        &::before{
          content: " ";
          width: 1px;
          height: 30px;
          display: table;
          background: linear-gradient(black, transparent);
          position: absolute;
          top: -30px;
        }
        &::after{
          content: " ";
          width: 20px;
          height: 20px;
          display: table;
          background: black;
          border-radius: 50%;
        }
      }
    }
    .bg_image{
      width: 100%;
      margin-bottom: 3.7%;
      margin-top: 3.5%;
    }
    #slider{
      width:0%;
      height:100%;
      background-color: white;
      top:0px;
      left:0px;
      position:absolute;
      cursor:pointer;
      padding-top: 3.7%;
      &::after{
        content: '';
        position: absolute;
        top: 0; right: 0; bottom: 0; left: 0;
        z-index: -1;
        margin-right: -2px; /* !importanté */
        border-radius: inherit; /* !importanté */
        background: linear-gradient(white, black, white)
      }
      .image-content{
        overflow: hidden;
        height: 100%;
        .hover_image{
          width: calc(100vw - 17px);
          top: 0;
          position: relative;
          left: 0px;
          background: white;
          height: 100%;
        }
      }
      
      #info{
        display:none;
        width:50px;
        height:25px;
        border-radius:15px;
        text-align: center;
        padding-top:7px;
        background: #0c4896;
        color:white;
        font-size:0.8em;
        margin-top:25px;
        margin-left:-20px;
        position: absolute;
        right:-25px;
      }

      #info-pointer{
        display:none;
        margin-top:18px;
        width: 0; 
        height: 0; 
        border-left: 10px solid transparent;
        border-right: 10px solid transparent;
        border-bottom: 10px solid #0c4896;
        position: absolute;
        right:-10px;
      }

      #slider-button{
        width:40px;
        height:40px;
        margin-top:-3px;
        background:white;
        color: black;
        border-radius: 25px;
        position:absolute;
        right:-20px;
        top: 50%;
        transform: translateY(-50%);
        box-shadow: 1px 1px 13px -5px rgba(0,0,0,0.41);
        display: flex;
        align-items: center;
        justify-content: center;
        &::before{
          content: "|||";
          font-weight: bold;
          font-size: 17px;
        }
      }
    }
  }
}

