  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  .flickity-viewport{
    width: 100%;
    order: 1;
  }
  .previous{
    order: 2;
    margin-left: auto;
  }
  .next{
    order: 4;
    margin-right: auto;
  }
  .flickity-page-dots{
    display: flex!important;
    align-items: center;
    justify-content: center;
    order: 3;
    position: initial;
    width: auto;
    transform: none;
    .dot{
      height: 4px!important;
      width: 4px!important;
      margin: 0!important;
      background: black!important;
      margin-left: 5px!important;
      border-radius: 50%!important;
      opacity: 1!important;
