<div class="container full-width--true image-slider-content">
  <div class="heading">
    <h2 class="text-center">{{ section.settings.title }}</h2>
    <h4 class="text-center uppercase">{{ section.settings.desc | strip_html }}</h4>
  </div>
  <div id='bar'>
    {% for block in section.blocks %}
      {% if block.type == 'label' and block.settings.position == 'background' %}
        <div class="label-indicator align-{{block.settings.direction}}" style="left: {{block.settings.left_pos}}%; top: {{ block.settings.top_pos }}%;">
          <span class="title">{{block.settings.title}}</span>
          <div class="pointer"></div>
        </div>
      {% endif %}
    {% endfor %}
    {% if section.settings.image_slider_bg_svg != blank %}
    <div class="bg_image">
      {{ section.settings.image_slider_bg_svg }}
    </div>
    {% else %}
      <img class="bg_image" src="{{section.settings.image_slider_bg_image | img_url : '2048x'}}">
    {% endif %}
    
    <div id='slider'>
      <div class="label-content">
        {% for block in section.blocks %}
          {% if block.type == 'label' and block.settings.position == 'slider' %}
            <div class="label-indicator align-{{block.settings.direction}}" style="left: {{block.settings.left_pos}}%; top: {{ block.settings.top_pos }}%;">
              <span class="title">{{block.settings.title}}</span>
              <div class="pointer"></div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="image-content">
        <img class="hover_image" src="{{ section.settings.hover_image | img_url: '1024x' }}">
      </div>
      <div id="slider-button"></div>
    </div>
  </div>
  <div class="list medium-down--show hide">
    <ul>
      {% for block in section.blocks %}
        <li class="label-indicator align-{{block.settings.direction}}" style="left: {{block.settings.left_pos}}%; top: {{ block.settings.top_pos }}%;">
          <span class="uppercase">{{block.settings.title}}</span>
        </li>
      {% endfor %}
    </ul>
  </div>
  {% if section.settings.button != blank %}
  <div class="bottom-pannel container center">
    <a href="{{section.settings.link}}" class="button button-black">{{section.settings.button}}</a>
  </div>
  {% endif %}
  
</div>

{% schema %}
{
  "name": "Image slider section",
  "class": "image-slider-section",
  "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "MEET THE LEGEND"
      },
      {
        "type": "richtext",
        "id": "desc",
        "label": "Description"
      },
      {
        "type": "html",
        "id": "image_slider_bg_svg",
        "label": "Bacground image(svg)"
      },
      {
        "type": "image_picker",
        "id": "image_slider_bg_image",
        "label": "Bacground image"
      },
      {
        "type": "image_picker",
        "id": "image_slider_hover_image",
        "label": "Hover image"
      },
      {
        "type": "image_picker",
        "id": "hover_image",
        "label": "Hover image"
      },
      {
        "type": "text",
        "id": "button",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "link"
      }
  ],
  "blocks": [
      {
        "type": "label",
        "name": "Label",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "TItle"
          },
          {
            "type": "text",
            "id": "left_pos",
            "label": "Left Position"
          },
          {
            "type": "text",
            "id": "top_pos",
            "label": "Top position"
          },
          {
            "type": "select",
            "id": "direction",
            "label": "Label directoin",
            "options": [
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "select",
            "id": "position",
            "label": "Label Position",
            "options": [
              {
                "value": "background",
                "label": "background"
              },
              {
                "value": "slider",
                "label": "slider"
              }
            ]
          }
        ]
      }
  ],
  "presets": [
    {
      "category": "image",
      "name":"Image slider"
    }
  ]
}
{% endschema %}