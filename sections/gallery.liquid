{% include 'include-gallery-block' %}


{% schema %}
  {
    "name": "Gallery",
    "class": "image-gallery-section",
    "max_blocks": 24,
    "settings": [
      {
        "type": "checkbox",
        "id": "gallery_wide_display",
        "label": "Wide display"
      },
      {
        "type": "text",
        "id": "galllery_title",
        "label": "Heading",
        "default": "Gallery"
      },
      {
        "type": "select",
        "id": "gallery_type",
        "label": "Gallery style",
        "options": [
          {
            "value": "classic",
            "label": "Classic"
          },
          {
            "value": "horizontal",
            "label": "Horizontal masonry"
          },
          {
            "value": "masonry",
            "label": "Vertical masonry"
          }
        ],
        "default": "classic"
      },
      {
        "type": "range",
        "id": "gallery_grid-size",
        "label": "Number of columns",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 4,
        "info": "Vertical masonry and classic only"
      },
      {
        "type": "checkbox",
        "id": "gallery_enable_lightbox",
        "label": "Enable lightbox",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "800 x 800px recommended"
          }
        ]
      }
    ],
     "presets": [
      {
        "name": "Gallery",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
