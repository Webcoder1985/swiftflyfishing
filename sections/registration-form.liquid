<div class="featured-link--section featured-link--image ">
  <div class="featured-link--half featured-link--image" id="banner">
    <div class="featured-link--wrap">
        {% if section.settings.banner_image %}
          {% render 'image-element-lazy', image: section.settings.banner_image, alt: block.settings.banner_image.alt %}
        {% else %}
          {% capture i %}{% cycle "1", "2", "3", "4", "5", "6" %}{% endcapture %}
          {{ 'collection-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--promotions' }}
        {% endif %}
    </div>
  </div>
  <div class="featured-link--half featured-link--image " id="customer">
    <!-- Create Customer -->
    <div class="content">
      <h1>{{ 'customer.register.title' | t }}</h1>
      {% form 'create_customer' %}
        {{ form.errors | default_errors }}

        <div id="first_name" class="clearfix large_form">
          <label for="first_name" class="login">{{ 'customer.register.first_name' | t }}<span>*</span></label>
          <input type="text" value="" name="customer[first_name]" id="first_name" class="large" size="30" />
        </div>

        <div id="last_name" class="clearfix large_form">
          <label for="last_name" class="login">{{ 'customer.register.last_name' | t }}<span>*</span></label>
          <input type="text" value="" name="customer[last_name]" id="last_name" class="large" size="30" />
        </div>

        <div id="email" class="clearfix large_form">
          <label for="email" class="login">{{ 'customer.register.email' | t }}<span>*</span></label>
          <input type="email" value="" name="customer[email]" id="email" class="large" size="30" />
        </div>

        <div id="password" class="clearfix large_form">
          <label for="password" class="login">{{ 'customer.register.password' | t }}<span>*</span></label>
          <input type="password" value="" name="customer[password]" id="password" class="large password" size="30" />
        </div>

        {% if section.settings.text %}
          {{ section.settings.text }}
        {% endif %}

        <div class="acceptsMarketing">
          <input type="checkbox" id="customer[accepts_marketing]" name="customer[accepts_marketing]">
          <label for="customer[accepts_marketing]">{{ 'customer.register.accepts_marketing' | t }}</label>
        </div>

        <div class="action_bottom">
          <input class="button full-button button-black" type="submit" value="{{ 'customer.register.sign_up' | t }}" />
          <p class="bottom-links">
            {{ 'customer.register.returning_customer_label' | t }} <a href="{{ routes.account_login_url }}" id="customer_login_link">{{ 'customer.register.sign_in_html' | t }}</a>
          </p>
        </div>

      {% endform %}
    </div><!-- /#create-customer -->
  </div>
</div>

{% schema %}
  {
    "name": "Register",
    "class": "register-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner image"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }
    ]
  }
{% endschema %}
