<ul class="icon-bar-content flex" style="background-color: {{ section.settings.bg-color }};">
  {% for block in section.blocks %}
    {% if block.settings.title != blank %}
      <li class="icon-item">
        {{ block.settings.icon }}
        <p>{{ block.settings.title }}</p>
      </li>
    {% endif %}
  {% endfor %}
  </ul>
{% schema %}
{
  "name": "Icon bar section",
  "class": "icon-bar-section",
  "settings": [
    {
      "type": "color",
      "id": "bg-color",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon block",
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Icon bar",
    "category": "Image"
  }]
}
{% endschema %}