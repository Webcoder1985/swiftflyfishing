{% comment %}
** Product with additional details - custom view **
- Product template
- Uses blocks
{% endcomment %}

  {% assign overlay_status = true %}
  {% assign collection_list_status = true %}
  {% assign image_status = true %}
  {% capture image-overly-slider %}
  {% for block in section.blocks %}
    {% if block.type == "image_with_text_overlay" %}
        {% include 'include-image-with-text-overlay', type: 'block' %}
    {% endif %}
  {% endfor %}
  {% endcapture %}
  <div class="product-details__blocks clearfix">
    {% if section.blocks.size > 0 %}
        <div class="block__image_with_text_overlay block__{{ section.id }}">
          <div class="image-text-overlay-slider">
            {% for block in section.blocks %}
              {% include 'include-image-with-text-overlay', type: 'block' %}
            {% endfor %}
          </div>
        </div>
    {% endif %}
  </div>
{% schema %}

{
  "name": "Product Staff section",
  "class": "product-template product-details-section",
  "max_blocks": 20,
  "settings": [
    {
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": true
    },
    {
      "type": "range",
      "id": "opacity",
      "label": "Opacity",
      "unit": "%",
      "min": 1,
      "max": 100,
      "step": 1,
      "default": 100
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Heading color"
    },
    {
      "type": "select",
      "id": "title_style",
      "label": "Heading style",
      "options": [
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "small",
          "label": "Small"
        }
      ]
    },
    
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Text color"
    },
    {
      "type": "checkbox",
      "id": "caption_background",
      "label": "Display solid text background",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "caption_background_transparency",
      "label": "Enable background transparency"
    },
    {
      "type": "select",
      "id": "caption_position",
      "label": "Caption vertical align",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "caption align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "select",
      "id": "mobile_image_crop",
      "label": "Image cropping",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "mobile_text_below_image",
      "label": "Show text below image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "more_review",
      "label": "More review button",
      "default": true
    },
    {
      "type": "color",
      "id": "mobile_text_color",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "image_with_text_overlay",
      "name": "Pro staff block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1800 x 1000px recommended"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile image"
        },
        {
          "type": "html",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "richtext",
          "id": "pretext",
          "label": "Preheading"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        },
        {
          "type": "text",
          "id": "button1",
          "label": "First button label"
        },
        {
          "type": "url",
          "id": "button1_link",
          "label": "First button link"
        },
        {
          "type": "checkbox",
          "id": "button1_highlight",
          "label": "Highlight first button"
        },
        {
          "type": "text",
          "id": "button2",
          "label": "Second button label"
        },
        {
          "type": "url",
          "id": "button2_link",
          "label": "Second button link"
        },
        {
          "type": "checkbox",
          "id": "button2_highlight",
          "label": "Highlight second button"
        }
      ]
    }
  ]
}

{% endschema %}
